#!/bin/bash

# Script de deploy manual para o Sentinela no Google Cloud Run
# Execute: chmod +x deploy.sh && ./deploy.sh

set -e  # Para na primeira falha

# ğŸ”§ CONFIGURAÃ‡Ã•ES DO PROJETO (AJUSTE AQUI!)
PROJECT_ID="sz-wsp-00009"  # âš ï¸ SUBSTITUA pelo seu Project ID
SERVICE_NAME="sentinela"
REGION="us-central1"
IMAGE_NAME="gcr.io/$PROJECT_ID/$SERVICE_NAME"

echo "ğŸš€ Iniciando deploy do Sentinela no Google Cloud Run"
echo "ğŸ“Š Projeto: $PROJECT_ID"
echo "ğŸŒ RegiÃ£o: $REGION"
echo "ğŸ·ï¸ ServiÃ§o: $SERVICE_NAME"
echo ""

# Verifica se PROJECT_ID foi alterado
if [ "$PROJECT_ID" = "seu-projeto-gcp-id" ]; then
    echo "âŒ ERRO: VocÃª precisa configurar o PROJECT_ID no script!"
    echo "ğŸ“ Edite o arquivo deploy.sh e substitua 'seu-projeto-gcp-id' pelo ID do seu projeto"
    echo "ğŸ’¡ Para ver seus projetos: gcloud projects list"
    exit 1
fi

# Verifica se gcloud estÃ¡ instalado
if ! command -v gcloud &> /dev/null; then
    echo "âŒ Google Cloud SDK nÃ£o estÃ¡ instalado"
    echo "ğŸ’¡ Instale em: https://cloud.google.com/sdk/docs/install"
    exit 1
fi

# Verifica se Docker estÃ¡ instalado
if ! command -v docker &> /dev/null; then
    echo "âŒ Docker nÃ£o estÃ¡ instalado"
    echo "ğŸ’¡ Instale em: https://docs.docker.com/get-docker/"
    exit 1
fi

# Verifica se estÃ¡ logado no gcloud
if ! gcloud auth list --filter=status:ACTIVE --format="value(account)" | grep -q .; then
    echo "âŒ VocÃª nÃ£o estÃ¡ logado no Google Cloud"
    echo "ğŸ’¡ Execute: gcloud auth login"
    exit 1
fi

# Configura projeto
echo "ğŸ”§ Configurando projeto GCP..."
gcloud config set project $PROJECT_ID

# Habilita APIs necessÃ¡rias
echo "ğŸ”Œ Habilitando APIs necessÃ¡rias..."
gcloud services enable run.googleapis.com
gcloud services enable cloudbuild.googleapis.com
gcloud services enable containerregistry.googleapis.com

# Autentica Docker com GCP
echo "ğŸ”‘ Autenticando Docker..."
gcloud auth configure-docker

# Build da imagem
echo "ğŸ“¦ Construindo imagem Docker..."
docker build -t $IMAGE_NAME:latest .

# Push da imagem
echo "ğŸ“¤ Enviando imagem para Container Registry..."
docker push $IMAGE_NAME:latest

# Deploy no Cloud Run
echo "ğŸš€ Fazendo deploy no Cloud Run..."
gcloud run deploy $SERVICE_NAME \
    --image $IMAGE_NAME:latest \
    --region $REGION \
    --platform managed \
    --allow-unauthenticated \
    --memory 1Gi \
    --cpu 1 \
    --min-instances 0 \
    --max-instances 10 \
    --port 8080 \
    --set-env-vars ENVIRONMENT=production \
    --timeout 300 \
    --concurrency 80

# ObtÃ©m URL do serviÃ§o
SERVICE_URL=$(gcloud run services describe $SERVICE_NAME --region=$REGION --format="value(status.url)")

echo ""
echo "âœ… Deploy concluÃ­do com sucesso!"
echo "ğŸŒ URL do serviÃ§o: $SERVICE_URL"
echo "ğŸ“Š Monitoramento: https://console.cloud.google.com/run/detail/$REGION/$SERVICE_NAME"
echo ""
echo "ğŸ”§ Comandos Ãºteis:"
echo "  â€¢ Ver logs: gcloud run services logs tail $SERVICE_NAME --region=$REGION"
echo "  â€¢ Atualizar: ./deploy.sh"
echo "  â€¢ Parar: gcloud run services delete $SERVICE_NAME --region=$REGION"
echo ""
echo "ğŸ‰ Sentinela estÃ¡ online!"